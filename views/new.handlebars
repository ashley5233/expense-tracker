<div class="container">
  <form action="/new" method="POST">
    <h3> 請輸入你的支出</h3>
    <div class="row-sm">
      <label class="form-label" for="name">名稱：</label>
      <input type="text" name="name">
    </div>
    <div class="row-sm">
      <label class="form-label" for="date">日期：</label>
      <input type="date" name="date">
    </div>
    <div class="row-sm">
      <label class="form-label" for="categorys">類別：</label>
      <input class="form-control" list="categorys" name="category" id="category">
      <datalist id="categorys">
        <option>家居物業</option>
        <option>交通出行</option>
        <option>休閒娛樂</option>
        <option>餐飲食品</option>
        <option>其他</option>
      </datalist>
    </div>
    <div class="row-sm">
      <label class="form-label" for="amount">金額：</label>
      <input type="text" name="amount">
    </div>
    <button type="submit"> 送出 </button>
  </form>
</div>